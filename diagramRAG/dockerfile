FROM python:3.10-slim

WORKDIR /app

# 复制应用代码
COPY api.py requirements.txt ./
COPY chroma_db_diagrams/ /app/chroma_db_diagrams/

# 安装依赖
RUN pip install --no-cache-dir -r requirements.txt

# 设置环境变量
ENV CHROMA_DB_PATH="/app/chroma_db_diagrams"
ENV PORT=8000

# 暴露端口
EXPOSE 8000

# 启动命令
CMD uvicorn api:app --host 0.0.0.0 --port $PORT
